table,td,th
	border 1px solid gray
	border-collapse collapse
	padding 3px 6px
.tabla-users
	margin-bottom 5em
.Boton-inico
	background #ffa500
	padding 1em
	border-radius 5px
	border 3px solid black
	-webkit-transition background 0.2s, color 0.2s
	margin-bottom 5px
	&:hover
		background blue
		color white
		text-decoration none
		font-weight bold
.Header-user
	margin-top 15em
.Columna-email
	width 35%
.Columna-telefono
	width 35%
.div_user_form
	height 100vh
	margin-top 8em
	text-align center
.user_form
	text-align center
	background black
	color black
	display inline-block
	padding 1em
	border-radius .5em
	border orange 5px solid
.input_user
	background white
	padding 1em
	display block
